@using SistemaDeLogin.ViewModels
@model AccountRegisterViewModel
<form asp-controller="Account" asp-action="Register" method="post" style="width: max-content; margin: 0 auto;">
    <h2>Registro</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="form-col-label"></label>
        <input asp-for="Email" type="text" name="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="form-col-label"></label>
        <input asp-for="Password" type="text" name="Password" class="form-control" placeholder="Contraseña" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-col-label"></label>
        <input asp-for="ConfirmPassword" type="text" name="ConfirmPassword" class="form-control" placeholder="Confirmar contraseña" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <input type="submit" value="Crear cuenta" class="btn btn-primary" />
    <a asp-action="Login">¿Ya tienes cuenta? Inicia sesión.</a>
</form>
